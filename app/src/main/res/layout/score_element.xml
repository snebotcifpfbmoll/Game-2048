<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/rounded_corner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5sp"
    android:backgroundTint="@color/game_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/score_title"
        style="@style/counter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_title" />

    <TextView
        android:id="@+id/score_result"
        style="@style/counter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_toEndOf="@id/score_title"
        android:textColor="@color/text_color"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/player_title"
        style="@style/counter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_result"
        android:text="@string/player_title" />

    <TextView
        android:id="@+id/player_result"
        style="@style/counter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_result"
        android:layout_marginStart="10sp"
        android:layout_toEndOf="@id/player_title"
        android:textColor="@color/text_color" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/next_arrow"
        android:src="@drawable/next_arrow_white" />
</RelativeLayout>