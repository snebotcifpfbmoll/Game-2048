<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rounded_corner">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="counter" parent="rounded_corner">
        <item name="android:backgroundTint">@color/score_background</item>
        <item name="android:layout_width">@dimen/counter_size</item>
        <item name="android:layout_height">@dimen/counter_size</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="counter_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/score_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="counter_number">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="banner">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/app_color</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="widget">
        <item name="android:background">@drawable/widget_bg</item>
    </style>

    <style name="widget.view" parent="widget">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_text" parent="widget.view">
        <item name="android:paddingStart">20sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/counter_text</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title" parent="widget.view">
        <item name="android:textColor">@color/counter_text</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="counter2" parent="widget.view">
        <item name="android:fontFamily">monospace</item>
        <item name="android:width">150sp</item>
        <item name="android:textColor">@color/counter_text</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="maxHeight">10sp</item>
    </style>

    <style name="undo" parent="widget.view">
        <item name="android:minWidth">100sp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/undo_disabled</item>
    </style>

    <style name="button" parent="title">
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:padding">10sp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>